<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminHttpsHeadersDisableTest">
        <annotations>
            <features value="Backend"/>
            <stories value="Disable Https Headers"/>
            <title value="Admin should be able to disable Https Headers"/>
            <description value="Admin should be able to disable Https Headers in Magento Admin backend"/>
            <group value="backend"/>
            <group value="mtf_migrated"/>
        </annotations>

        <before>
            <actionGroup ref="LoginAsAdmin" stepKey="LoginAsAdmin"/>
            <magentoCLI stepKey="setSecureUrlsOnStoreFront" command="config:set web/secure/use_in_frontend Yes"/>
            <magentoCLI stepKey="setSecureUrlsOnAdmin" command="config:set web/secure/use_in_adminhtml No"/>
            <magentoCLI stepKey="cacheFlush" command="cache:flush"/>
        </before>
        <after>
            <magentoCLI stepKey="DisableSecureUrlsOnStoreFront" command="config:set web/secure/use_in_frontend No"/>
            <magentoCLI stepKey="cacheFlush" command="cache:flush"/>
            <actionGroup ref="logout" stepKey="logout"/>
        </after>

        <!-- TEST BODY -->
        <actionGroup ref="AssertAdminHttpsHeaderOptionsNotAvailableActionGroup" stepKey="assertNoOptions"/>
    </test>
</tests>
